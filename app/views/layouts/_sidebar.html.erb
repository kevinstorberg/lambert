<div class="col-xs-4 col-sm-4 col-md-2 col-lg-2 col-xl-2">
  <div id="sidebar-wrapper" class="content-shadow">
    <div class="content-wrapper" style="padding: 18px;">
      <ul id="sidebar-menu" class="content-body" style="padding: 10px;">
        <li>
          <%= link_to "Dashboard", root_path(current_user), class: (home_path? ? "btn btn-active content-button" : "btn content-button"), style: "width: 100%;" %>
        </li>
        <li>
          <%= link_to "Profile", edit_user_path(current_user), class: (profile_path? ? "btn btn-active content-button" : "btn content-button"), style: "width: 100%;" %>
        </li>

        <%- if current_user.present? && current_user.any_admin? %>
          <li>
            <%= link_to "Users", users_path, class: (users_path? ? "btn btn-active content-button" : "btn content-button"), style: "width: 100%;" %>
          </li>
          <li>
            <%= link_to "Services", service_areas_path, class: (services_path? ? "btn btn-active content-button" : "btn content-button"), style: "width: 100%;" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
