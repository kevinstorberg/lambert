<div id="contact-form" style="margin: 0 auto;">
  <form action="https://formspree.io/kevin@storberg.net">
    <div class="container">

      <div class="col-xs-12 form-group">
        <input type="text" name="name" placeholder="Full Name" value="" class="form-control" required>
      </div>

      <div class="col-xs-6 form-group">
        <input type="text" name="_replyto" placeholder="Email" value="" class="form-control" required>
      </div>

      <div class="col-xs-6 form-group">
        <input type="text" name="phone" placeholder="Phone" value="" class="form-control" required>
      </div>

      <!-- <div class="col-xs-6 form-group">
        <input type="text" name="address" placeholder="Address" value="" class="form-control">
      </div> -->

      <div class="col-xs-6 form-group">
        <textarea name="message" rows="3" cols="30" placeholder="How can we help you?" class="form-control"></textarea>
      </div>

      <div class="col-xs-6 form-group">
        <button class="btn btn-default close-modal modal-button" data-dismiss="modal" aria-hidden="true">Close</button>
        <input class="btn btn-default modal-button pull-right submit-button" type="submit" value="Submit">
      </div>

    </div>
  </form>
</div>
