<div id="login-form-wrapper" style="border-radius: 5px;">
  <div class="form-content" style="border-radius: 5px; padding: 10px;">
    <div class="form-body" style="border-radius: 5px; padding: 30px;">
      <div class="container" style="border-radius: 5px;">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="col-xs-12 form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div>

          <div class="col-xs-12 form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="col-xs-12 form-group" style="color: white;">
              <%= f.submit "Log in", class: "btn form-button" %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
